<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="0dp"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:padding="0dp"
    tools:context=".Questionstarter" >

    <Button
        android:id="@+id/newgames"
         style = "@style/btnStylelivid_brown "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="New Game" />

    <Button
        android:id="@+id/button3rd"
         style = "@style/btnStylelivid_brown "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button2nd"
        android:layout_alignRight="@+id/button2nd"
        android:layout_below="@+id/button2nd"
        android:text="Leaderboards" />

    <Button
        android:id="@+id/button4"
         style = "@style/btnStylelivid_brown "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button3rd"
        android:layout_alignRight="@+id/button3rd"
        android:layout_below="@+id/button3rd"
        android:text="Settings" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="115dp"
        android:src="@drawable/mainbutton" />

    <TextView
        android:id="@+id/scoretext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/namestart"
        android:layout_below="@+id/namestart"
          android:paddingLeft="25dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/button2nd"
        style = "@style/btnStylelivid_brown "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/newgames"
        android:text="Friends" />

    <ImageView
        android:id="@+id/imageView3"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:src="@drawable/cooltext1367139696" />

    <Button
        android:id="@+id/subaque"
         style = "@style/btnStylelivid_brown "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button4"
        android:text="Submit a Question" />

    <TextView
        android:id="@+id/namestart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:paddingLeft="25dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <com.js.questionme.RoundedImageView
        android:id="@+id/userProfilePicture"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/imageView1"
        android:padding="1dip"
        android:scaleType="center"
        android:src="@drawable/action_photo"
        app:border_color="@color/com_facebook_picker_search_bar_text"
        app:border_width="3dip"
        app:corner_radius="30dip"
        app:is_oval="false" />

</RelativeLayout>
