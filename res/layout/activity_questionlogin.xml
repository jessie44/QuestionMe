<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_screen"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_margin="0dp"
    android:background="@drawable/wassup"
    android:padding="0dp" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:src="@drawable/cooltext1367139696" />

    <Button
        android:id="@+id/signup"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="131dp"
        android:text="SignUp" />

    <Button
        android:id="@+id/loginbutt"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/signup"
        android:layout_alignBottom="@+id/signup"
        android:layout_toLeftOf="@+id/signup"
        android:text="Login" />

    <ImageButton
        android:id="@+id/twitter"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/facebook"
        android:background="@null"
        android:src="@drawable/twitters" />

    <ImageButton
        android:id="@+id/facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imageView1"
        android:layout_below="@+id/signup"
        android:layout_marginTop="26dp"
        android:background="@null"
        android:src="@drawable/facebook" />

</RelativeLayout>