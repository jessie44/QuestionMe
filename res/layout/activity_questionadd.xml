<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddQuestions" >

    <EditText
        android1:id="@+id/mcc3"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignBottom="@+id/radioGroup1"
        android1:layout_toRightOf="@+id/radioGroup1"
        android1:ems="10" />

    <Button
        android1:id="@+id/submit"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/usernamess"
        android1:layout_alignParentBottom="true"
        android1:layout_alignParentRight="true"
        android1:text="Button" />

    <TextView
        android1:id="@+id/usersname"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentTop="true"
        android1:layout_centerHorizontal="true"
        android1:layout_marginTop="38dp"
        android1:text="Enter Question Below:"
        android1:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android1:id="@+id/mcb2"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_above="@+id/mcc3"
        android1:layout_alignRight="@+id/usersname"
        android1:layout_marginBottom="46dp"
        android1:ems="10" >

       
    </EditText>

    <EditText
        android1:id="@+id/sq"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignRight="@+id/usersname"
        android1:layout_below="@+id/usersname"
        android1:layout_marginTop="42dp"
        android1:ems="10"
        android1:inputType="textMultiLine" >
         <requestFocus /> 
</EditText>
    <TextView
        android1:id="@+id/usernamess"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_below="@+id/sq"
        android1:layout_centerHorizontal="true"
        android1:layout_marginTop="23dp"
        android1:text="Enter Choices Below, Use RadioButton to declare answer." />

    <EditText
        android1:id="@+id/mca1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/usersname"
        android1:layout_below="@+id/usernamess"
        android1:layout_marginTop="13dp"
        android1:ems="10" />

    <RadioGroup
        android1:id="@+id/radioGroup1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignTop="@+id/mca1"
        android1:layout_marginTop="13dp"
        android1:layout_toLeftOf="@+id/mcb2" >

        <RadioButton
            android1:id="@+id/radioa"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:checked="true" />

        <RadioButton
            android1:id="@+id/radiob"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_marginTop="50dp" />

        <RadioButton
            android1:id="@+id/radioc"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_marginTop="50dp" />
    </RadioGroup>

</RelativeLayout>