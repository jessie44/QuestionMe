<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="0dp"
    tools:context=".ActActivity" >

    <Button
        android:id="@+id/nextq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="Next" 
        style="@style/btnStyleOrange"
/> 

    <Button
        android:id="@+id/answer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/facebook"
        android:layout_alignRight="@+id/facebook"
        android:layout_below="@+id/facebook"
         style= "@style/btnStyleBlackpearl"
        android:layout_marginTop="19dp"
        android:text="" 
       />

    <Button
        android:id="@+id/answer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/answer2"
        android:layout_alignRight="@+id/answer2"
        android:layout_below="@+id/answer2"
         style= "@style/btnStyleBlackpearl"
        android:layout_marginTop="15dp"
        android:text="" 
      />

    <TextView
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nextq"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:gravity="center"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nextq"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/congrat"
        style= "@style/btnStyleBlackpearl"
        android:layout_marginTop="39dp" />

    <TextView
        android:id="@+id/congrat"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/facebook"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/progressBarrank"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20dp" />

    <ProgressBar
        android:id="@+id/progressBarrank"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/congrat"
        android:layout_alignRight="@+id/congrat"
        android:layout_below="@+id/button1st"
        android:layout_marginTop="21dp"
        android:progressDrawable="@drawable/progressbarc" />

    <Button
        android:id="@+id/button1st"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/progressBarrank"
        android:layout_alignParentTop="true"
        android:visibility="invisible"
       	style="@style/MyCoolButton"
       	
          android:text="4" />

    <Button
        android:id="@+id/button2nd"
        style="@style/MyCoolButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Help" />

    <Button
        android:id="@+id/button3rd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        style="@style/MyCoolButton"
         android:visibility="invisible"
        android:layout_alignRight="@+id/progressBarrank"
        android:text="4" />

</RelativeLayout>