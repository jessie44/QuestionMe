<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".cyga" >

    <Button
        android:id="@+id/answer2"
     
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/facebook"
        android:layout_alignRight="@+id/facebook"
        android:layout_below="@+id/facebook"
        android:layout_marginTop="19dp"
        android:text="" />

    <Button
        android:id="@+id/answer3"
     
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/answer2"
        android:layout_alignRight="@+id/answer2"
        android:layout_below="@+id/answer2"
        android:layout_marginTop="15dp"
        android:text="" />

    <Button
        android:id="@+id/facebook"
       
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/congrat"
        android:layout_marginTop="32dp" />

    <ProgressBar
        android:id="@+id/progressBarrank"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/answer3"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/answer3"
        android:layout_marginBottom="48dp"
       

        android:progressDrawable="@drawable/progressbarc" />

    <TextView
        android:id="@+id/countview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/congrat"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/facebook"
        android:layout_alignRight="@+id/facebook"
        android:layout_below="@+id/countview"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20dp" />

</RelativeLayout>